<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="/Content/css/list-styles.css" type="text/css">
</head>
<body>
  <h1 class="page-header">Venues</h1>
  @if (Model.Count == 0)
  {
    <h3>There are currently no venues in our records</h3>
  }
  else
  {
    @foreach (var venue in Model)
    {
      <a href="/venues/@venue.GetId()/@venue.GetName()"><h2>@venue.GetName()</h2></a>
    }
  }
  <form class="form-group" action="/venues/new" method="post">
    <div class="row">
      <button type="button" class="col-xs-6 btn btn-success">Add New Venue</button>
      <button type="button" class="col-xs-6 btn btn-danger" formaction="/venues/deleted">Delete All Venues</button>
    </div>
  </form>
</body>
