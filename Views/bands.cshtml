<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="/Content/css/list-styles.css" type="text/css">
</head>
<body>
  <h1 class="page-header">Bands</h1>
  @if (Model.Count == 0)
  {
    <h3>There are currently no bands in our records</h3>
  }
  else
  {
    @foreach (var band in Model)
    {
      <a href="/bands/@band.GetId()/@band.GetName()"><h2>@band.GetName()</h2></a>
    }
  }
  <h3>Add New Band</h3>
  <form class="form-group" action="/bands/new" method="post">
    <div class="row">
      <div class="col-xs-3">
        <p>Name <input required type="text" name="band-name" class="form-control"></p>
      </div>
      <div class="col-xs-3">
        <p>Music Genre <input required type="text" name="band-music-genre" class="form-control"></p>
      </div>
    </div>
    <p>Description <input required type="text" name="band-description" class="form-control"></p>
    <p>Website <input required type="text" name="band-website" class="form-control"></p>
    <button type="submit" class="btn btn-success">Add</button>
  </form>
  <form class="form-group" action="/bands/deleted" method="post">
    <button type="submit" class="btn btn-danger">Delete All Bands</button>
  </form>
  <a href="/">Home</a>
</body>
