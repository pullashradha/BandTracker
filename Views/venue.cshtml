<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="/Content/css/single-styles.css" type="text/css">
</head>
<body>
  <h1 class="page-header">@Model.GetName()</h1>
  <h2>@Model.GetWebsite()</h2>
  <h3>@Model.GetPhoneNumber()</h3>
  <h3>@Model.GetStreetAddress() @Model.GetCity(), @Model.GetState() @Model.GetZipcode()</h3>
  <h3>Update Venue</h3>
  <form class="form-group" action="/venues/@Model.GetId()/@Model.GetName()/updated" method="post">
    <p>Name <input required type="text" name="update-venue-name" class="form-control"></p>
    <div class="row">
      <div class="col-xs-3">
        <p>Street Address <input required type="text" name="update-venue-street-address" class="form-control"></p>
      </div>
      <div class="col-xs-3">
        <p>City <input required type="text" name="update-venue-city" class="form-control"></p>
      </div>
      <div class="col-xs-3">
        <p>State <input required type="text" name="update-venue-state" class="form-control"></p>
      </div>
      <div class="col-xs-3">
        <p>Zipcode <input required type="text" name="update-venue-zipcode" class="form-control"></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <p>Phone Number <input required type="text" name="update-venue-phone-number" class="form-control"></p>
      </div>
      <div class="col-xs-6">
        <p>Website <input required type="text" name="update-venue-website" class="form-control"></p>
      </div>
    </div>
    <p>Event Date <input required type="datetime" name="update-venue-event-date" class="form-control"></p>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
  <h2>View All Bands That Have Played At This Venue</h2>
  @if (Model.GetBands().Count == 0)
  {
    <h3>There are currently no bands in our records</h3>
  }
  else
  {
    @foreach (var band in Model.GetBands())
    {
      <h2>@band.GetName() on @Model.GetEventDate()</h2>
    }
  }
  <h3>Add New Band</h3>
  <form class="form-group" action="/venues/@Model.GetId()/@Model.GetName()/new" method="post">
    <div class="row">
      <div class="col-xs-3">
        <p>Name <input required type="text" name="band-name" class="form-control"></p>
      </div>
      <div class="col-xs-3">
        <p>Music Genre <input required type="text" name="band-music-genre" class="form-control"></p>
      </div>
    </div>
    <p>Description <input required type="text" name="band-description" class="form-control"></p>
    <p>Website <input required type="text" name="band-website" class="form-control"></p>
    <button type="submit" class="btn btn-primary">Add</button>
  </form>
  <form class="form-group" action="/venues/@Model.GetId()/@Model.GetName()/deleted" method="post">
    <button type="submit" class="btn btn-danger">Delete Venue</button>
  </form>
  <a href="/venues">Venues List</a>
  <a href="/">Home</a>
</body>
